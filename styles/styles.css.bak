body {
  margin: 0;
}
ROUTER-VIEW{
	display: block;
}
.page-host{width: 95vw}
.absolute-center{
	display: flex;
	position: absolute;
    left: calc(50% - 40px);
    right: calc(50% - 40px);
    top: calc(50% - 24px);
    height: 80px;
    width: 80px;
    font-size: 3em;
    border-radius: 60px;
    text-align: center;
    align-items: center;
    justify-content: center;
}
.hidden{display: none;}
.full{
	display: block;
	width: 100%
}

/* coup.html */
.symboleList{
	position: relative;
	list-style-type: none;
	margin: 0;
	padding: 0;
}
BUTTON.btn.symbole{
	position: relative;
	border-radius: 100%;
	height: 20vh;
    width: 20vh;
	
}
.symboleList LI{
	margin-bottom: 23px;
}
.symboleList LI:first-child{
	margin-bottom: -14px;
	text-align: center;
}
.symboleList LI:last-child{
	padding: 0 1vh;
	margin-bottom: 0;
}
/* Start Button */
.btn-start{
    box-shadow: inset 0px 0px 29px red, 0px 0px 12px red;
	z-index: 12;    
	position: absolute;
    bottom: 12px;
    left: 0;
    right: 0;
}
/* Timer */
.compteur{
    box-shadow: inset 0px 0px 29px black;
	z-index: 5;
}
/* tableau des scores */
.gameInfo{
	margin: 8px auto 25px auto;
	height: 60px;
}
.gameInfo > DIV{
	width: 30%;
	border: 1px solid grey;
	display: inline-block;
}

.gameLoader{
	width: 100%;
	height: 100%;
	opacity: 0.75;
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	
}

